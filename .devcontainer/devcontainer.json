{
    "name": "Dev Container with VNC",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "password": "vscode",
            "webPort": "6080",
            "vncPort": "5901"
        },
        "ghcr.io/devcontainers/features/sshd:1": {
            "version": "latest"
        },
        "ghcr.io/devcontainers/features/common-utils:2": {}
    },
    "forwardPorts": [6080, 5901],
    "portsAttributes": {
        "6080": {
            "label": "Desktop (noVNC)",
            "onAutoForward": "notify"
        },
        "5901": {
            "label": "VNC",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "echo 'Dev container with VNC is ready!'",
    "remoteUser": "vscode"
}
